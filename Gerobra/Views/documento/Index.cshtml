@model IEnumerable<Gerobra.Models.documento>

@{
    ViewBag.Title = "Listar Documentos";
}

<h2>Listar Documentos</h2>

<p>
    @Html.ActionLink("Criar novo Documento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dta_documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sin_ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endereco_arquivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.extensao_arquivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_arquivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.obra.cod_obra)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dta_documento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sin_ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endereco_arquivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.extensao_arquivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome_arquivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.obra.cod_obra)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_documento }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id_documento }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.id_documento })
        </td>
    </tr>
}

</table>

@model IEnumerable<Gerobra.Models.material>

@{
    ViewBag.Title = "Listar Material";
}

    <h2>Listar Material</h2>

<p>
    @Html.ActionLink("Criar novo material", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tipo de Material")
        </th>
        <th>
            @Html.DisplayName("Nome do Material")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.tipo_material.nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nome)
    </td>

    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.id_material }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.id_material }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.id_material })
    </td>
</tr>
}

</table>

@model Gerobra.Models.uf

@{
    ViewBag.Title = "Deletar Estado";
}

    <h2>Deletar Estado</h2>

<h3>Você realmente deseja excluir este Estado?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Sigla do Estado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sigla)
        </dd>

        <dt>
            @Html.DisplayName("Nome do Estado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            @Html.DisplayName("Pais")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pais.nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>

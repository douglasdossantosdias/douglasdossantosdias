@model IEnumerable<Gerobra.Models.obra>

@{
    ViewBag.Title = "Listar Obra";
}

<h2>OBRAS</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cod_obra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dta_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orcamento_previsao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endereco.logradouro)
        </th>
        <th>
            @Html.DisplayName("Status da Obra")
        </th>
        <th>
            @Html.DisplayName("Tipo de Obra")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cod_obra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dta_inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orcamento_previsao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endereco.logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status_obra.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_obra.descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_obra }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.id_obra }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.id_obra })
            </td>
        </tr>
    }

</table>

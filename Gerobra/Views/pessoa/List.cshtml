@model IEnumerable<Gerobra.Models.pessoa>

@{
    ViewBag.Title = "Listagem";
}

<h2>Listagem de Pessoas cadastradas</h2>

@using (Html.BeginForm())
{
    <p>
        Procura por nome: @Html.TextBox("SearchString")
        <input type="submit" value="Procurar" class="btn btn-primary" />

    </p>
}


<table class="table">
    <tr>

        <th>
            @Html.DisplayName("Tipo de Pessoa")
        </th>



        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_fantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cnpj)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.rg)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.cpf)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.conta_bancaria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.tipo_pessoa.nome)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_fantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cnpj)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.rg)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.conta_bancaria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_pessoa }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.id_pessoa }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.id_pessoa })
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/JsGeral")
}
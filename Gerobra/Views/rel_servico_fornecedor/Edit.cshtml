@model Gerobra.Models.rel_servico_fornecedor

@{
    ViewBag.Title = "Editar Serviço Fornecedor";
}

    <h2>Editar Serviço Fornecedor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_rel_servico_fornecedor)

        <div class="form-group">
            @Html.LabelFor(model => model.id_fornecedor, "Fornecedor", htmlAttributes: new { @class = "control-label col-md-2" })

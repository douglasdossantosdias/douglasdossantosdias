@model Gerobra.Models.servico

@{
    ViewBag.Title = "Excluir Serviço";
}

    <h2>Excluir Serviço</h2>

<h3>Você realmente quer Excluir este serviço?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("Tipo do Serviço")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_servico.nome)
        </dd>
        <dt>
            @Html.DisplayName("Nome do Serviço")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>




        <dt>
            @Html.DisplayName("Ativo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sin_ativo)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excuir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>

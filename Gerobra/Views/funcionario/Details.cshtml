@model Gerobra.Models.funcionario

@{
    ViewBag.Title = "Detalhar Funcionário";
}

    <h2>Detalhar Funcionário</h2>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Ativo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sin_ativo)
        </dd>

        <dt>
            @Html.DisplayName("Nome do Funcionário")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pessoa.nome)
        </dd>

        <dt>
            @Html.DisplayName("Função do Funcionário")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_funcionario.nome)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id_funcionario }) |
    @Html.ActionLink("Voltar", "Index")
</p>

@model Gerobra.Models.cliente

@{
    ViewBag.Title = "Excluir Cliente";
}

<h2>Excluir Cliente</h2>

<h3>Você tem certeza que quer excluir este cliente?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Ativo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sin_ativo)
        </dd>

        <dt>
            @Html.DisplayName("Nome do CLiente")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pessoa.nome)
        </dd>

        <dt>
            @Html.DisplayName("Tipo de Cliente")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_cliente.descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>

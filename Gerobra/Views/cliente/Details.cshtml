@model Gerobra.Models.cliente

@{
    ViewBag.Title = "Detalhar Cliente";
}

<h2>Detalhes do Cliente</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Ativo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sin_ativo)
        </dd>


        <dt>
            @Html.DisplayName(" Pessoa ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.pessoa.nome)
        </dd>

        <dt>
            @Html.DisplayName("Tipo de Cliente")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_cliente.descricao)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id_cliente }) |
    @Html.ActionLink("Voltar", "Index")
</p>

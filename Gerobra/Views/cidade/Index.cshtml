@model IEnumerable<Gerobra.Models.cidade>

@{
    ViewBag.Title = "Listar Cidade";
}

<h2>Listar Cidade</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome da Cidade")
        </th>
        <th>
            @Html.DisplayName("Sigla do Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uf1.sigla)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_cidade }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id_cidade }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.id_cidade })
        </td>
    </tr>
}

</table>
